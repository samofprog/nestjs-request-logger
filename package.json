{
  "name": "@samofprog/nestjs-request-logger",
  "version": "3.1.0",
  "description": "A production-ready NestJS middleware for comprehensive HTTP request/response logging with security features",
  "author": "Samuel Assemien <sa.assemien@gmail.com>",
  "license": "MIT",
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "yarn clean && yarn lint",
    "build": "tsc",
    "postbuild": "echo 'Build completed successfully'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "publish:local": "yarn build && yalc publish",
    "publish:online": "yarn build && npm publish --access public",
    "start": "ts-node src/index.ts",
    "lint": "eslint 'src/**/*.{js,ts}' --fix",
    "lint:check": "eslint 'src/**/*.{js,ts}'",
    "format": "prettier --write 'src/**/*.ts'",
    "prepare": "husky"
  },
  "devDependencies": {
    "@nestjs/common": "^11.1.5",
    "@types/express": "^5.0.0",
    "express": "^4.21.2",
    "fastify": "^5.3.2",
    "@eslint/js": "^9.17.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.11",
    "prettier": "3.4.2",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [
    "nestjs",
    "fastify",
    "middleware",
    "http",
    "logger",
    "logging",
    "http-logging",
    "request-logging",
    "response-logging",
    "error-logging",
    "nodejs",
    "typescript",
    "api",
    "monitoring",
    "debugging",
    "performance"
  ],
  "peerDependencies": {
    "@nestjs/common": "^8.0.0 || ^9.0.0 || ^10.0.0",
    "express": "^4.0.0",
    "fastify": "^4.0.0 || ^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/samofprog/nestjs-http-logger.git"
  },
  "bugs": {
    "url": "https://github.com/samofprog/nestjs-http-logger/issues"
  },
  "homepage": "https://github.com/samofprog/nestjs-http-logger#readme"
}
